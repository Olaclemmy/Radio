<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="org.oucho.radio2"
    android:installLocation="auto">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />

    <application
        android:name=".RadioApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:launchMode="singleTask"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.oucho.radio2.radio.RadioActivity" />
        </activity>

        <activity android:name=".radio.RadioActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:mimeType="audio/*"
                    android:scheme="http"
                    tools:ignore="AppLinkUrlError" />
                <data
                    android:pathPattern=".*\\.mp3"
                    android:scheme="http" />
                <data
                    android:pathPattern=".*\\.aac"
                    android:scheme="http" />
                <data
                    android:pathPattern=".*\\.pls"
                    android:scheme="http" />
                <data
                    android:pathPattern=".*\\.m3u"
                    android:scheme="http" />
                <data
                    android:pathPattern=".*\\.m3u8"
                    android:scheme="http" />
                <data
                    android:mimeType="audio/*"
                    android:scheme="https" />
                <data
                    android:pathPattern=".*\\.mp3"
                    android:scheme="https" />
                <data
                    android:pathPattern=".*\\.aac"
                    android:scheme="https" />
                <data
                    android:pathPattern=".*\\.pls"
                    android:scheme="https" />
                <data
                    android:pathPattern=".*\\.m3u"
                    android:scheme="https" />
                <data
                    android:pathPattern=".*\\.m3u8"
                    android:scheme="https" />
            </intent-filter>
        </activity>

        <service android:name=".radio.RadioService" />

        <service android:name=".widget.WidgetService"/>

        <service
            android:name=".update.DownloadService"
            android:exported="false" />

        <provider
            android:name=".update.UpdateApkFileProvider"
            android:authorities="${applicationId}.update.provider"
            android:exported="false"
            android:grantUriPermissions="true">

            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/update_apk_paths" />

        </provider>

        <receiver
            android:name=".receiver.StopReceiver"
            tools:ignore="ExportedReceiver">
            <intent-filter>
                <action android:name="org.oucho.radio2.STOP" />
            </intent-filter>
        </receiver>

        <receiver
            android:name=".receiver.NewRadioReceiver"
            tools:ignore="ExportedReceiver">
            <intent-filter>
                <action android:name="org.oucho.radio2.ADD_RADIO" />
            </intent-filter>
        </receiver>

        <receiver android:name=".widget.RadioWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/radio_widget_info" />
        </receiver>

    </application>

</manifest>